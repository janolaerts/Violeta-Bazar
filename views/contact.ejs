<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Tienda Violeta Bazar</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</head>

<style>
  .navbar-toggler:focus, .navbar-toggler:active {
    outline: none;
    box-shadow: none;
  }

  .form-container {
    margin-top: 75px;
    border-radius: 10px;
  }

  .form-container input, .form-container textarea, .form-container button {
    color: white;
    width: 100%;
    padding: 5px 5px;
    background-color: transparent;
    border: 2px solid white;
    border-radius: 7.5px;
  }

  .form-container input::placeholder, .form-container textarea::placeholder {
    color: white;
  }

  .form-container button:hover {
    background-color: lightsalmon;
    border: 2px solid lightsalmon;
  }

  /* responsive design */

  @media all and (max-width: 767px) {
    .form-container {
      margin-top: 10px;
      border-radius: 0px;
    }
  }
</style>

<body>
  <nav class="navbar navbar-expand-lg fixed-top" style="background-color: midnightblue;">
    <div class="container">
      <a class="navbar-brand" href="/"><img src="logo.png" width="80px" alt="logo"></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon">
            <svg style="color: white;" id="i-menu" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="32" height="32" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
              <path d="M4 8 L28 8 M4 16 L28 16 M4 24 L28 24" />
          </svg>
        </span>
      </button> 
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link text-light" href="/">Tienda</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-light" href="/about">Nosotros</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link font-weight-bold" style="color: white;" href="/contact">Contacto</a>
          </li>
        </ul>
        <a href="/cart" class="float-right" style="cursor: pointer;">
          <svg style="color: white;" id="i-cart" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="30" height="30" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
            <path d="M6 6 L30 6 27 19 9 19 M27 23 L10 23 5 2 2 2" />
            <circle cx="25" cy="27" r="2" />
            <circle cx="12" cy="27" r="2" />
          </svg>
        </a>
      </div>
    </div>
  </nav>

  <div class="container contact-container" style="position: relative; top: 75px;">
    <div class="row d-flex justify-content-center">
      <h1 style="color: midnightblue;">Estamos para escucharle!</h1>
    </div>

    <% if(feedback != null) { %>
      <div class="toast-wrapper d-flex justify-content-center" style="position: absolute; z-index: 1000; left: 50%; top: 10%;">
        <div class="toast d-flex justify-content-center toast" style="position: absolute; width: 300px; background-color: midnightblue;" role="alert" aria-live="assertive" aria-atomic="true" data-delay="2000">
          <div class="toast-body" style="color: white; font-weight: bold;"><%= feedback %></div>
        </div>
      </div>
    <% } %>

    <div class="row d-flex justify-content-center form-container">
      <form action="/contact" method="POST" style="background-color: midnightblue; width: 400px; padding: 50px; border-radius: 50px 0px 50px 0px;">
        <div class="col-xs-12" style="margin: 25px 0px;">
          <input type="text" name="name" placeholder="Ingrese su nombre">
        </div>
        <div class="col-xs-12" style="margin: 50px 0px;">
          <input type="number" name="phone" placeholder="Ingrese su teléfono">
        </div>
        <div class="col-xs-12" style="margin: 50px 0px;">
          <input type="email" name="email" placeholder="Ingrese su correo electrónico">
        </div>
        <div class="col-xs-12">
          <textarea type="text" name="message" placeholder="Qué quiere preguntar?" style="margin: 0px 0px 25px 0px; height: 100px;"></textarea>
        </div>
        <div class="col-xs-12">
          <button type="submit" style="margin: 25px 0px;">Enviar</button>
        </div>
      </form>
    </div>

  </div>

  <script>
    $('.toast').toast('show');
  </script>

</body>
</html>