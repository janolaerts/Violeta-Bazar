<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Tienda Violeta Bazar</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</head>

<style>
  .navbar-toggler:focus, .navbar-toggler:active {
    outline: none;
    box-shadow: none;
  }

  .success-quantity, .success-name, .success-price {
    position: relative;
    top: 70px;
  }

  @media all and (max-width: 767px) {
    .success-quantity, .success-name, .success-price {
      top: auto;
    }
  }
  @media (min-width: 576px) and (max-width: 767px) {
    .success-quantity, .success-name, .success-price {
      top: 40px;
    }
  }
</style>

<body>
  <nav class="navbar navbar-expand-lg fixed-top" style="background-color: midnightblue;">
    <div class="container">
      <a class="navbar-brand" href="/"><img src="/logo.png" width="80px" alt="logo"></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon">
          <svg style="color: white;" id="i-menu" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="32" height="32" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
            <path d="M4 8 L28 8 M4 16 L28 16 M4 24 L28 24" />
          </svg>
        </span>
      </button> 
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link text-light" href="/">Tienda</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-light" href="/about">Nosotros</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" style="color: white;" href="/contact">Contacto</a>
          </li>
        </ul>
        <a href="/cart" class="float-right" style="cursor: pointer;">
          <svg style="color: white;" id="i-cart" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="30" height="30" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
            <path d="M6 6 L30 6 27 19 9 19 M27 23 L10 23 5 2 2 2" />
            <circle cx="25" cy="27" r="2" />
            <circle cx="12" cy="27" r="2" />
          </svg>
        </a>
      </div>
    </div>
  </nav>

  <div class="container success-payment-container" style="position: relative; top: 75px; margin-bottom: 80px;">
    <div class="row d-flex justify-content-center">
      <div class="col-xs-12">
        <h1 style="color: midnightblue; border-bottom: 2px solid midnightblue; padding-bottom: 5px;">Muchas gracias por su compra!</h1>
      </div>
    </div>
    <div class="row d-flex justify-content-center" style="margin-top: 5px;">
      <div class="col-xs-12">
        <h2 style="color: midnightblue;">Resumen del pedido:</h2>
      </div>
    </div>

    <% products.map(item => { %>
      <div class="row d-flex justify-content-center succes-payment-products" style="margin-top: 20px; border-bottom: 2px solid white; background-color: midnightblue;">
        <div class="col-xs-12 col-sm-4 d-flex justify-content-center">
          <h3 class="success-quantity" style="color: white;"><%= item.quantity %>x <%= item.name.replace('-', ' ') %></h3>
        </div>
        <!--<div class="col-xs-12 col-sm-3 d-flex justify-content-start">
          <h3 class="success-name" style="color: white;"><%= item.name.replace('-', ' ') %></h3>
        </div>-->
        <div class="col-xs-12 col-sm-4 d-flex justify-content-center">
          <img src="products/<%= item.img %>" style="height: 150px; margin: 10px 0px;">
        </div>
        <div class="col-xs-12 col-sm-4 d-flex justify-content-center">
          <h3 class="success-price" style="color: white;">s./<%= item.price %></h3>
        </div>
      </div>
    <% }) %>

    <div class="row d-flex justify-content-end">
      <h3 style="color: midnightblue;">El precio total fue: s./<%= total %></h3>
    </div>

  </div>

  <footer class="container-fluid footer" style="background-color: midnightblue; height: 40px; position: fixed; bottom: 0px;">
      <div class="container">
        <div class="row">
          <div class="col-6 d-flex justify-content-center">
            <a href="#"><img src="instagram.png" alt="instagram" width="30px;" style="position: relative; top: 5px; cursor: pointer;"></a>
          </div>
          <div class="col-6 d-flex justify-content-center">
            <a href="#" target="_blank"><img src="facebook.png" alt="facebook" width="30px;" style="position: relative; top: 5px; cursor: pointer;"></a>
          </div>
        </div>
      </div>
    </footer>

</body>